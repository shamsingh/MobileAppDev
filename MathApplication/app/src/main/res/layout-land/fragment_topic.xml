<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LandingActivity"
    android:background="@drawable/topicland"
    >



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addition_button"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="215dp"
        android:width="150dp"
        android:height="110dp"
        android:background="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtraction_button"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="400dp"
        android:width="150dp"
        android:height="110dp"
        android:background="@null" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplication_button"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="215dp"
        android:width="150dp"
        android:height="115dp"
        android:background="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/division_button"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="390dp"
        android:width="148dp"
        android:height="115dp"
        android:background="@null"/>

</RelativeLayout>
