<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="finalyear.coursework.coc115.mathapplication.topicFragment"
    android:background="@drawable/topicland"
    >

    <Button
        style="@style/topicButtonsLand"
        android:id="@+id/addition_button"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="213dp"/>

    <Button
        style="@style/topicButtonsLand"
        android:id="@+id/subtraction_button"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="395dp" />

    <Button
        style="@style/topicButtonsLand"
        android:id="@+id/multiplication_button"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="213dp"/>

    <Button
        style="@style/topicButtonsLand"
        android:id="@+id/division_button"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="395dp"/>

</RelativeLayout>
