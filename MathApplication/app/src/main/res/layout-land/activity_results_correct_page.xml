<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LandingActivity"
    android:background="@drawable/correctland"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_question_button_land"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="70dp"
        android:width="150dp"
        android:onClick="nextQuestion"
        android:background="@android:color/transparent"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replay_question_button_land"
        android:height="70dp"
        android:width="150dp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:onClick="replayQuestion"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_menu_button_land"
        android:layout_alignParentRight="true"
        android:height="100dp"
        android:width="160dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/transparent"
        android:onClick="menuButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebook_button_land"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:onClick="shareToFacebook"
        android:width="100dp"
        android:height="100dp"/>
</RelativeLayout>