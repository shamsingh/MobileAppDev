<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LandingActivity"
    android:background="@drawable/topicland"
    >



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addition_button"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="300dp"
        android:width="185dp"
        android:height="140dp"
        android:background="@null"
        android:onClick="proceedToQuestionsListPage"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtraction_button"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="535dp"
        android:width="185dp"
        android:height="140dp"
        android:background="@null"
        android:onClick="proceedToQuestionsListPage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplication_button"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="300dp"
        android:width="185dp"
        android:height="140dp"
        android:background="@null"
        android:onClick="proceedToQuestionsListPage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/division_button"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="535dp"
        android:width="185dp"
        android:height="140dp"
        android:background="@null"
        android:onClick="proceedToQuestionsListPage"/>

</RelativeLayout>
