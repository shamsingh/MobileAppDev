<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LandingActivity"
    android:background="@drawable/wrong"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replay_question_button"
        android:layout_marginBottom="153dp"
        android:height="50dp"
        android:width="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebook_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="20dp"
        android:width="50dp"
        android:height="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_question_button"
        android:layout_marginTop="49dp"
        android:width="300dp"
        android:height="50dp"
        android:layout_alignTop="@+id/replay_question_button"
        android:layout_alignLeft="@+id/replay_question_button"
        android:layout_alignStart="@+id/replay_question_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_to_menu_button"
        android:height="50dp"
        android:width="300dp"
        android:layout_below="@+id/next_question_button"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/next_question_button"
        android:layout_alignStart="@+id/next_question_button"
        android:onClick="returnToMenuClick"/>
</RelativeLayout>