<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LandingActivity"
    android:background="@drawable/topic"
    
    >



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addition_button"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:width="300dp"
        android:height="65dp"
        android:background="@null"
        android:onClick="proceedToQuestionsListPage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtraction_button"
        android:layout_marginTop="327dp"
        android:layout_marginLeft="30dp"
        android:width="300dp"
        android:height="65dp"
        android:background="@null"
        android:onClick="proceedToQuestionsListPage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplication_button"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="30dp"
        android:width="300dp"
        android:height="65dp"
        android:background="@null"
        android:onClick="proceedToQuestionsListPage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/division_button"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        android:width="300dp"
        android:height="65dp"
        android:background="@null"
        android:onClick="proceedToQuestionsListPage"/>

</RelativeLayout>
