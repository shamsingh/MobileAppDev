<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="finalyear.coursework.coc115.mathapplication.ResultsPageActivity"
    android:background="@drawable/correct"
    >

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/facebook_button"
        android:onClick="shareToFacebook"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@android:color/transparent"/>

    <Button
        style="@style/resultButtonBig"
        android:layout_marginTop="410dp"
        android:id="@+id/next_question_button"
        android:onClick="nextQuestion"/>

    <Button
        style="@style/resultButtonBig"
        android:id="@+id/replay_question_button"
        android:onClick="replayQuestion"/>

    <Button
        style="@style/resultButtonBig"
        android:id="@+id/return_to_menu_button"
        android:onClick="menuButton"/>
</LinearLayout>